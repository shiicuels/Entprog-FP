@model MP_ENTPROG_CUELLOSM_PANGILINANJA.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Delete</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Student Record</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h4>Do you want to Delete @Model.Firstname @Model.Lastname's Record?</h4>
    <p>When you delete the record, His/Her account will be deactivated.</p>

    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
