@model IEnumerable<MP_ENTPROG_CUELLOSM_PANGILINANJA.Models.Classlist>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Classlist List</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty)
        </td>
        <td>
            @Html.ActionLink("Edit Class", "Edit", new { id = item.ID }) |
            @Html.ActionLink("View / Delete Student", "ManageStudents", new { id = item.ID }) |
            <form action="~/Classlist/AddMore" method="post">
                <input type="hidden" name="ClasslistID" value="@item.ID" />
                <button type="submit" class="btn btn-link">
                    Add Student
                </button>
            </form>
            @Html.ActionLink("Void", "Void", new { id = item.ID })
        </td>
    </tr>
}

</table>
