@model IEnumerable<MP_ENTPROG_CUELLOSM_PANGILINANJA.Models.ClasslistDetail>

@{
    ViewBag.Title = "ManageStudents";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Manage Students</h2>
<hr />
<p>
    @Html.ActionLink("Add More Students", "AddMoreStudents")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClasslistID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClasslistID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student)
        </td>
        <td>
            @Html.ActionLink("Add Attendance", "AddAttendance", new { id = item.ID }) |
            @Html.ActionLink("View Attendance", "ViewAttendance", new { id = item.ID }) |
        </td>
    </tr>
}

</table>
