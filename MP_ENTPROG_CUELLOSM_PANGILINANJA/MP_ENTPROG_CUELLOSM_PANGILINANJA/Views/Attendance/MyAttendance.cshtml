@using MP_ENTPROG_CUELLOSM_PANGILINANJA.Models;
@model IEnumerable<MP_ENTPROG_CUELLOSM_PANGILINANJA.Models.Attendance>


@{
    ViewBag.Title = "MyAttendance";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h3><b>My Attendance</b></h3>

@{
    Classlist cl = (Classlist)Session["ClasslistHeader"];
}
<h4>@cl.Subject @cl.Venue - @cl.Faculty (@cl.ClassDays)</h4>
<i class="control-label">Select an attendance to edit</i>
<br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClasslistID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClasslistID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAnAttendance", new { id = item.ID }) |
                @Html.ActionLink("Void", "Void", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to My Classlist", "ListFaculty", new { Controller = "Classlist" })
</div>
